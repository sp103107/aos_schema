{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "aos.schema.agent.sorcerer.output.v1",
  "title": "AoS Sorcerer Agent Output Contract v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "status",
    "generation_summary",
    "artifacts"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "SUCCESS",
        "PARTIAL_SUCCESS",
        "FAILURE",
        "NEEDS_HUMAN_INPUT"
      ]
    },
    "generation_summary": {
      "type": "string"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "artifact_id",
          "type",
          "content"
        ],
        "properties": {
          "artifact_id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "text",
              "markdown",
              "plan",
              "roadmap",
              "code",
              "json",
              "schema",
              "blueprint"
            ]
          },
          "content": {
            "type": "string"
          },
          "metadata": {
            "type": "object",
            "additionalProperties": true,
            "default": {}
          }
        }
      }
    },
    "notes": {
      "type": "string",
      "default": ""
    },
    "metrics": {
      "type": "object",
      "additionalProperties": true,
      "default": {}
    }
  }
}
