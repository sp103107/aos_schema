{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schema.aos.tools_bootstrap.batch_plan_entry.v1",
  "title": "Batch Plan Entry (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "type",
    "created_at",
    "batch_id",
    "tool_root",
    "detected",
    "sha256_tree",
    "status"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "const": "aos.batch_plan_entry"
    },
    "created_at": {
      "type": "string"
    },
    "batch_id": {
      "type": "string"
    },
    "tool_root": {
      "type": "string"
    },
    "detected": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "kind",
        "entrypoint_hint",
        "signals"
      ],
      "properties": {
        "kind": {
          "type": "string"
        },
        "entrypoint_hint": {
          "type": "string"
        },
        "signals": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "sha256_tree": {
      "type": "string"
    },
    "status": {
      "enum": [
        "planned",
        "reviewed",
        "ingested",
        "skipped",
        "error"
      ]
    }
  }
}
