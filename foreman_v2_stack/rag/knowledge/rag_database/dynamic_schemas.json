{
  "component_id": "foreman_v2",
  "dynamic_schemas": {
    "orchestration_schema": {
      "description": "Dynamic schema for orchestration operations",
      "input_schema": {
        "type": "object",
        "properties": {
          "task_type": {
            "type": "string",
            "description": "Type of orchestration task"
          },
          "task_data": {
            "type": "object",
            "description": "Data for the orchestration task"
          },
          "execution_options": {
            "type": "object",
            "description": "Execution options and parameters"
          }
        },
        "required": ["task_type"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "execution_results": {
            "type": "object",
            "description": "Results of the orchestration execution"
          },
          "performance_metrics": {
            "type": "object",
            "description": "Performance metrics from execution"
          },
          "orchestration_summary": {
            "type": "object",
            "description": "Summary of orchestration process"
          }
        }
      }
    },
    "testing_schema": {
      "description": "Dynamic schema for testing operations",
      "input_schema": {
        "type": "object",
        "properties": {
          "test_scenarios": {
            "type": "array",
            "description": "Test scenarios to execute"
          },
          "test_configuration": {
            "type": "object",
            "description": "Configuration for testing"
          },
          "validation_rules": {
            "type": "object",
            "description": "Validation rules for test results"
          }
        },
        "required": ["test_scenarios"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "test_results": {
            "type": "array",
            "description": "Results of test execution"
          },
          "validation_report": {
            "type": "object",
            "description": "Validation report for test results"
          },
          "performance_evaluation": {
            "type": "object",
            "description": "Performance evaluation metrics"
          }
        }
      }
    },
    "ai_planning_schema": {
      "description": "Dynamic schema for AI planning operations",
      "input_schema": {
        "type": "object",
        "properties": {
          "planning_data": {
            "type": "object",
            "description": "Data for AI planning"
          },
          "ai_configuration": {
            "type": "object",
            "description": "AI model configuration"
          },
          "optimization_parameters": {
            "type": "object",
            "description": "Parameters for optimization"
          }
        },
        "required": ["planning_data"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "ai_generated_plans": {
            "type": "array",
            "description": "Plans generated by AI"
          },
          "optimization_recommendations": {
            "type": "object",
            "description": "Optimization recommendations"
          },
          "implementation_guidelines": {
            "type": "object",
            "description": "Guidelines for implementation"
          }
        }
      }
    }
  }
}

